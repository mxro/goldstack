{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "shared/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "bootstrap:prod": "NODE_ENV=production lerna bootstrap",
    "build": "lerna run build",
    "clean": "lerna clean --yes",
    "compile": "yarn workspaces foreach --parallel run compile",
    "compile:watch": "yarn workspaces foreach --parallel --interlaced run compile:watch",
    "coverage": "jest --coverage",
    "format": "prettier --write .",
    "format:check": "prettier .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "package:doctor": "yarn dlx @yarnpkg/doctor .",
    "test": "yarn workspaces foreach --parallel --interlaced run test",
    "test:ci": "yarn workspaces foreach --interlaced run test:ci",
    "test:ui": "jest --passWithNoTests --watch --config=jest.config.ui.js",
    "test:ui:ci": "jest --passWithNoTests --config=jest.config.ui.js"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "@yarnpkg/doctor": "^2.0.0-rc.17",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "prettier": "^2.0.5",
    "typescript": "^3.9.3"
  }
}
