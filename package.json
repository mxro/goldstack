{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "shared/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "bootstrap:prod": "NODE_ENV=production lerna bootstrap",
    "build": "lerna run build",
    "compile": "lerna run compile",
    "compile:watch": "compile && lerna run --parallel compile:watch",
    "clean": "lerna clean --yes",
    "test": "jest --passWithNoTests --watch --config=jest.config.js",
    "test:ui": "jest --passWithNoTests --watch --config=jest.config.ui.js",
    "test:ci": "jest --passWithNoTests --config=jest.config.js",
    "test:ui:ci": "jest --passWithNoTests --config=jest.config.ui.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:check": "prettier .",
    "format": "prettier --write .",
    "coverage": "jest --coverage",
    "package:doctor": "yarn dlx @yarnpkg/doctor ./package-dir"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.9.0",
    "@testing-library/react": "^10.0.4",
    "@types/jest": "^25.2.1",
    "@types/node": "^14.0.6",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/webpack": "^4.41.14",
    "@types/webpack-dev-server": "^3.11.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "@yarnpkg/doctor": "^2.0.0-rc.17",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "fork-ts-checker-webpack-plugin": "^4.1.6",
    "html-webpack-plugin": "^4.3.0",
    "jest": "^25.4.0",
    "microbundle": "^0.12.0",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "ts-jest": "^25.4.0",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  }
}
